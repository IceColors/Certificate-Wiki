@{
	ViewData["Title"] = "login";
}
@model Certificate_Wiki.Models.LoginRegister.LoginModel
<link rel="stylesheet" href="~/css/pages/logreg.css" media="all" />

<div class="background"></div>
<div class="content">
	<div class="content-image">
		<h1>Login and</h1>
		<h1>Learn more...</h1>
		<img src="~/images/logreg/Component 6 .png"
			 alt="error loading image"
			 style="width: 100%;" />
	</div>
	<div class="content-form">
		<h1>Log in</h1>
		<h6>
			Login with your email
		</h6>
		<p>
			Upload you certificates and create a profile! Share your work with
			employers, friends and family!
		</p>
		<div asp-validation-summary="All"></div>
		<form asp-action="Login" method="post">
			<div class="form-row">
				<input asp-for="Email" type="text" placeholder="Email" />
			</div>
			<div class="form-row">
				<input asp-for="Password" type="password" placeholder="password" />
			</div>
			<button>Register</button>
		</form>
		<a href="">Forgot password</a>
		<a href="">Register new user</a>
	</div>