@{
	ViewData["Title"] = "Edit Profile";
}
@model Certificates

<link rel="stylesheet" href="~/css/pages/Certificate.css" media="all" />

<div class="background"></div>
<div class="content">
	<div class="content-image">
		<img src="~/images/Certificate/Component 2 – 1.png" alt="" />
	</div>
	<div class="content-profile">
		<div class="profile-form">
			<h2>upload certificate</h2>
			<form asp-action="upload" method="post">
				<div asp-validation-summary="All"></div>

				<div class="form-row">
					<label>Certificate name</label>
					<input type="text" asp-for="CertificateName" />
				</div>
				<div class="form-row">
					<label>Subject</label>
					<input type="text" asp-for="Subject" />
				</div>
				<div class="form-row">
					<label>Admissioner</label>
					<input type="text" asp-for="Admissioner" />
				</div>
				<div class="form-row">
					<label>Description</label>
					<textarea type="text" asp-for="Description"></textarea>
				</div>
				<div class="form-row certificate">
					<label>How do you want to upload your certificate?</label>
					<div class="radio-buttons">
						<label>upload file</label>
						<input type="radio" value="upload" />
						<div class="certificate-file">
							<input type="file" asp-for="CertificateFile" />
						</div>
					</div>
					<div class="radio-buttons">
						<label>upload by image url</label>
						<input type="radio" value="url" name="certificate-type" />
						<div class="certificate-file">
							<input type="url" asp-for="CertificateUrl" />
						</div>
					</div>
				</div>

				<div class="form-row">
					<button type="submit">Upload</button>
				</div>
			</form>
		</div>
	</div>
</div>
<script src="~/js/certificate.js"></script>